{
  "name": "todo-service",
  "version": "1.0.0",
  "description": "Simple todo microservice for DevOps assessment",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-db": "node scripts/setup-db.js",
    "migrate": "node scripts/migrate.js migrate",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "migrate:rollback:version": "node scripts/migrate.js rollback",
    "docker:build": "docker build -t todo-service .",
    "docker:run": "docker run -p 3000:3000 --env-file .env todo-service",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:logs": "docker-compose logs -f todo-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": ["todo", "microservice", "rest-api"],
  "author": "",
  "license": "MIT"
}
